<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Fruit Color Quiz - Scoreboard</title>
  <link rel="stylesheet" href="/styles/quiz.css">
</head>

<% const user_login = locals.user %>

<body id="app">
  <div class="quiz-container scoreboard-wrapper">
    <h1 class="scoreboard-title">Scoreboard</h1>
    
    <div class="scoreboard-table-container">
      <table class="scoreboard-table">
        <thead>
          <tr>
            <th>Rank</th>
            <th>Username</th>
            <th>Score</th>
          </tr>
        </thead>
        <tbody>
          <% if(listItems.length > 0) { %>
            <% listItems.forEach((item, index) => { %>
              <tr class='current-user-row'>
                <td class="rank"><%= index + 1 %></td>
                <td><%= item.username %></td>
                <td><%= item.score %></td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="3" class="empty-table">No scores available yet</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    
    <a href="/" class="restart-button">Back to Game</a>
  </div>

  <%- include('partials/footer.ejs', { user: user_login, permission: locals.permission }); %>
</body>
</html>